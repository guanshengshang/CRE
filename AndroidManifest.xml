<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buc.cre"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.buc.cre.activity.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.buc.cre.activity.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.buc.cre.activity.PublishActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.buc.cre.activity.EditSellActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.buc.cre.activity.EditBuyActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.buc.cre.activity.StoreListActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>